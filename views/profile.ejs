<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile</title>
    <%- include('./partials/links.ejs') %>
    <link rel="stylesheet" href="/css/profile.css">
    <style>
        body {
            font-family: 'poppins', sans-serif;
        }
        .profile-header img {
            border-radius: 50%;
            width: 150px;
            height: 150px;
        }
        .header-buttons {
            margin-bottom: 20px;
        }
        .section {
            margin-bottom: 30px;
        }
        .tags-container {
            display: flex;
            flex-wrap: wrap;
        }
        .tag {
            background-color: #e0e0e0;
            border-radius: 5px;
            padding: 5px 10px;
            margin: 5px;
        }
        .dashboard-card {
            margin-bottom: 20px;
        }
        .dashboard-card h4 {
            margin-bottom: 10px;
        }
        .dashboard {
            display: flex;
            flex-direction: column;
        }
        .dashboard-card {
            text-align: center;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        .dashboard-card h4 {
            font-size: 18px;
            margin-bottom: 15px;
        }
        .dashboard-card .btn {
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Profile Header -->
        <div class="profile-header text-center">
            <div class="header-buttons mb-4">
                <a href="/"><button class="btn btn-secondary btn-sm"><i class="fas fa-home"></i> Home</button></a>
                <a href="/profile/editUserProfile"><button class="btn btn-primary btn-sm"><i class="fas fa-edit"></i> Edit Profile</button></a>
            </div>
            <% if (userData && userData.image) { %>
                <img src="<%= userData.image %>" alt="Profile Picture" />
            <% } else { %>
                <img src="/img/7309681.jpg" alt="Default Profile Picture" />
            <% } %>
            <% if (userData) { %>
                <h1><%= userData.FullName %></h1>
                <p class="text-muted"><i class="fas fa-envelope"></i> <%= userData.email %></p>
            <% } %>
        </div>

        <!-- Profile Info -->
        <% if (userData) { %>
            <div class="section">
                <h3><i class="fas fa-user"></i> About Me</h3>
                <p><%= userData.bio || 'No data available' %></p>
            </div>
        <% } %>

        <!-- Address -->
        <% if (userData) { %>
            <div class="section">
                <h3><i class="fas fa-map-marker-alt"></i> Address</h3>
                <p><%= userData.address || 'No data available' %></p>
            </div>
        <% } %>


        <!-- Dashboard -->
        <div class="dashboard">
            <h2><i class="fas fa-tachometer-alt"></i> Dashboard</h2>
            <div>
                    <div class="dashboard-card">
                        <h4><i class="fas fa-clipboard-list"></i> show posts</h4>
                        <p>View your activities and interactions on your posts.</p>
                        <a href="/profile/dashBoard" class="btn btn-primary">View <i class="fa-solid fa-eye "></i></a>
                    </div>
            </div>
        </div>
    </div>
</body>
</html>
